{
    "manifest_version": 3,
    "name": "Open in VSCode",
    "version": "1.5.0",
    "description": "Open Github and Gitlab links in VSCode",
    "action": {
        "default_icon": "icons/icon19.png",
        "default_title": "Open in VSCode"
    },
    "author": "Domenico Gemoli",
    "permissions": [
        "activeTab",
        "contextMenus",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://github.com/*",
        "https://gitlab.com/*"
    ],
    "background": {
        "service_worker": "contextmenu.js"
    },
    "content_scripts": [
        {
            "matches": ["https://github.com/*"],
            "js": ["keyboard-shortcut.js", "inject-buttons.js"],
            "run_at": "document_end"
        }
    ],
    "options_page": "options.html",
    "homepage_url": "https://github.com/aberonni/open-in-vscode",
    "offline_enabled": true,
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
